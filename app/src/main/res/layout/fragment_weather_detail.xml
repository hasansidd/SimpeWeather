<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.siddapps.android.simpleweather.WeatherDetailActivity">

    <FrameLayout
        android:id="@+id/weather_master_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/master_city_name"
                android:layout_width="250dp"
                android:layout_height="60dp"
                app:autoSizeTextType="uniform"
                app:autoSizeMaxTextSize="56dp"
                app:autoSizeMinTextSize="30dp"
                tools:text="Bossier yyyy"/>

            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/master_temp_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:textSize="56dp"
                tools:text="90°F"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/high_temps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/master_temp_text">

                    <ImageView
                        android:id="@+id/high"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_toRightOf="@id/master_temp_text"
                        app:srcCompat="@drawable/up"/>

                    <TextView
                        android:id="@+id/master_temp_high_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/high"
                        android:textSize="24dp"
                        tools:text="100°F"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/high_temps"
                    android:layout_toRightOf="@id/master_temp_text">

                    <ImageView
                        android:id="@+id/low"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/down"/>

                    <TextView
                        android:id="@+id/master_temp_low_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24dp"
                        tools:text="50°F"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


            <TextView
                android:id="@+id/master_description_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                tools:text="Cloudy"/>

            <TextView
                android:id="@+id/master_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="right"
                android:textSize="10dp"
                tools:text="Friday 4:20 pm"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/master_background_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="right|top"
            android:padding="8dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/clear"
            />
    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/weather_detail_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
