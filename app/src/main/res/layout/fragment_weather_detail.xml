<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.siddapps.android.simpleweather.weatherdetail.WeatherDetailActivity">

    <FrameLayout
        android:id="@+id/weather_master_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.siddapps.android.simpleweather.views.WeatherView
            android:id="@+id/weather_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.siddapps.android.simpleweather.views.WeatherView>

    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/weather_detail_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
